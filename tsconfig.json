{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "env.d.ts", 
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue", 
    "types/*.d.ts",
    "vite.config.mts",
    "build/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0"
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
